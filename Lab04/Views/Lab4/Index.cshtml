@model System.DateTime


@{
    ViewData["Title"] = "Index";
}


@if (Convert.ToDateTime("11:59") > Model)
{
    <div class="one">Good Morning!</div>


}
else
{
    <div class="one">Good Evening!</div>


}



<div class="two">The time is @Model.ToString("h:mm tt") on @Model.ToString("dddd, MMMM dd, yyyy")</div>


@if (DateTime.IsLeapYear(Model.Year))
{
    <div class="three">
        There are @(366 - Model.DayOfYear) more days in @Model.ToString("yyyy")
    </div>
    //  365
}
else
{

    <div class="three">
        There are @(365 - Model.DayOfYear) more days in @Model.ToString("yyyy")
    </div>
    //  365


}

<div class="four"><a href="">Go to Page 2</a></div>

